<!DOCTYPE html5>
<html lang="en" xmlns="http://www.w3.org/1999/xhtml">
  <head>
    <title>Sign Up</title>
    <!-- General META -->
    <meta charset="utf-8">
    <meta http-equiv="Content-type" content="text/html;charset=UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width,initial-scale=1,maximum-scale=1">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">
    <link rel="stylesheet" type="text/css" href="/css/signup.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link rel="stylesheet" href="https://code.getmdl.io/1.3.0/material.indigo-pink.min.css">
    <script defer src="https://code.getmdl.io/1.3.0/material.min.js"></script>
  </head>
  <body>
    <!--<h2>Sign In</h2>-->
    <!--<input id="email" type="email" placeholder="email"/>-->
    <!--<input id="password" type="password"/>-->
    <!--<button id="submit">Submit</button>-->
    <!--<br/>-->
    <!--<div id="error"></div>-->
    
    <div id="logo">
      <img src="/img/logo.png">
    </div>
    
    <div class="demo-card-wide mdl-card mdl-shadow--2dp" id="login-container">
      <div class="mdl-card__title">
        <h2 class="mdl-card__title-text">Sign Up</h2>
      </div>
      <div class="mdl-card__supporting-text" id="text-container">
        <form action="#">
          <div class="mdl-textfield mdl-js-textfield" id="input-div">
            <input class="mdl-textfield__input" type="text" id="fname">
            <label class="mdl-textfield__label" for="sample1">First Name</label>
          </div>
          
          <div class="mdl-textfield mdl-js-textfield" id="input-div">
            <input class="mdl-textfield__input" type="text" id="lname">
            <label class="mdl-textfield__label" for="sample1">Last Name</label>
          </div>
          
          <div class="mdl-textfield mdl-js-textfield" id="input-div">
            <input class="mdl-textfield__input" type="text" id="username">
            <label class="mdl-textfield__label" for="sample1">Username</label>
          </div>
          
          <div class="mdl-textfield mdl-js-textfield" id="input-div">
            <input class="mdl-textfield__input" type="text" id="email">
            <label class="mdl-textfield__label" for="sample1">Email</label>
          </div>
          
          <div class="mdl-textfield mdl-js-textfield" id="input-div">
            <input class="mdl-textfield__input" type="password" id="password">
            <label class="mdl-textfield__label" for="sample1">Password</label>
          </div>

          <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label" id="input-div">
            <select class="mdl-textfield__input" id="vendor" name="vendor">
              <option></option>
              <option value=""></option>
              <option value="true">Yes</option>
              <option value="false">No</option>
            </select>
            <label class="mdl-textfield__label" for="vendor">Vendor</label>
          </div>
        </form>
      </div>
      
      <div class="mdl-card__actions mdl-card--border">
        <a class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect" id="signin-button">
          Sign Up
        </a>
      </div>
      
    </div>
    
  </body>
  <script src="/lib/jquery/dist/jquery.min.js"></script>
  <script src="/vendor/ejs_production.js"></script>
  <script>
  var user = {};
    $("#fname").change(function(event){
      user.firstName=$("#fname").val();
    });
    $("#lname").change(function(event){
      user.lastName=$("#lname").val();
    });
    $("#username").change(function(event){
      user.username=$("#username").val();
    });
    $("#email").change(function(event){
      user.email=$("#email").val();
    });
    $("#password").change(function(event){
      user.password=$("#password").val();
    });
    $("#vendor").change(function(event){
      user.vendor=$("#vendor").val();
    });
    
    $("#signin-button").click(function(event){
      $.ajax({
        method: 'POST',
        url: "/auth/signup",
        data: user
      }).done(function(response){
        console.log(response);
        window.location.replace('/');
      }).fail(function(response){
        console.log(response);
        alert("Error! " + response);
      });
    });
  </script>
</html>
